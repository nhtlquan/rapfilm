<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#fff"
                android:startColor="#777" />
            <size
                android:width="2dp"
                android:height="2dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="@color/colorPink50"
                android:startColor="@color/colorPink50" />
            <size
                android:width="2dp"
                android:height="2dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="45"
                    android:endColor="@color/colorPink"
                    android:startColor="@color/colorPink" />
                <corners android:radius="2dp" />
                <size
                    android:width="2dp"
                    android:height="2dp" />
            </shape>
        </clip>
    </item>
</layer-list>
